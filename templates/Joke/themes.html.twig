<h2>Теми</h2>
<div class="row mb-5">
	{% for themesBatch in themes|batch(themes|length/3) %}
	<div class="col-md">
		{% for theme in themesBatch %}
			<a href="{{ path('app_joke_listbytheme', {slug: theme.slug}) }}" class="py-1 px-2 list-group-item list-group-item-action d-flex justify-content-between align-items-center">{{ theme.name }}
				<span class="badge badge-secondary badge-pill">{{ theme.nrOfJokes }}</span>
			</a>
		{% endfor %}
	</div>
	{% endfor %}
</div>
