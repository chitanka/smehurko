<h2>Теми</h2>
<div class="list-group">
{% for theme in themes %}
	<a href="{{ path('app_joke_listbytheme', {slug: theme.slug}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">{{ theme.name }}
		<span class="badge badge-secondary badge-pill">{{ theme.nrOfJokes }}</span>
	</a>
{% endfor %}
</div>
