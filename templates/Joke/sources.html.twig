<h2>Източници</h2>
<div class="list-group">
	{% for source in sources %}
		<a href="{{ path('app_joke_listbysource', {slug: source.slug}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">{{ source.name }}
			<span class="badge badge-secondary badge-pill">{{ source.nrOfJokes }}</span>
		</a>
	{% endfor %}
</div>
