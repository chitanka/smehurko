<h2>Източници</h2>
<div class="row">
	{% for sourcesBatch in sources|batch(sources|length/3) %}
	<div class="col-md">
		{% for source in sourcesBatch %}
			<a href="{{ path('app_joke_listbysource', {slug: source.slug}) }}" class="py-1 px-2 list-group-item list-group-item-action d-flex justify-content-between align-items-center">{{ source.name }}
				<span class="badge badge-secondary badge-pill">{{ source.nrOfJokes }}</span>
			</a>
		{% endfor %}
	</div>
	{% endfor %}
</div>
